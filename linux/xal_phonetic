    key <AE05> { [           5,	      U042E  ] };
    key <AE06> { [           6,   ampersand  ] };
    key <AE07> { [           7,       U27EA  ] };
    key <AE08> { [           8,       U27EB  ] };
    key <AE09> { [           9,   parenleft  ] };
    key <AE10> { [           0,  parenright  ] };
    key <AE11> { [       U002D,	 underscore  ] };
