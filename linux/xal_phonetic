// Phonetic keyboard layout for Kalmyk, based on the Russian keyboard layout.

partial alphanumeric_keys
xkb_symbols "xal_phonetic" {

    name[Group1]= "Kalmyk (phonetic)";
    key.type[group1]="FOUR_LEVEL";

    key <TLDE> { [ Cyrillic_softsign,	Cyrillic_SOFTSIGN,	Cyrillic_hardsign,	Cyrillic_HARDSIGN  ] };
